{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "term": {
                "type": "string",
                "description": "The glossary term"
            },
            "chapter": {
                "type": "string",
                "description": "Related Chapter or 'General'"
            },
            "definition_en": {
                "type": "string",
                "description": "Definition in English"
            },
            "definition_es": {
                "type": "string",
                "description": "Definition in Spanish"
            }
        },
        "required": [
            "term",
            "definition_en"
        ]
    }
}