{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "integer",
                "description": "Unique identifier for the article"
            },
            "title_english": {
                "type": "string",
                "description": "Title in English"
            },
            "transcript": {
                "type": "string",
                "description": "Full raw transcript of the video"
            },
            "youtube_id": {
                "type": "string",
                "description": "YouTube Video ID"
            },
            "description": {
                "type": "string",
                "description": "Legacy short description or summary"
            },
            "story": {
                "type": "string",
                "description": "The Leela (The Story) - Markdown supported"
            },
            "doubt": {
                "type": "string",
                "description": "The Conflict/Doubt - Markdown supported"
            },
            "revelation": {
                "type": "string",
                "description": "The Revelation (KrishnaJi's Reasoning) - Markdown supported"
            },
            "scriptural_refs": {
                "type": "string",
                "description": "Scriptural References - Markdown supported"
            },
            "keywords": {
                "type": "array",
                "items": {
                    "type": "string"
                },
                "description": "SEO keywords"
            },
            "social_tags": {
                "type": "array",
                "items": {
                    "type": "string"
                },
                "description": "Social media hashtags"
            }
        },
        "required": [
            "id",
            "title_english",
            "youtube_id",
            "description"
        ]
    }
}